<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">

        <shape android:shape="ring"
            android:useLevel="false"
            android:thicknessRatio="6"
            >

            <solid android:color="@color/colorProgressPowerFont2"/>

        </shape>
    </item>

    <item android:id="@android:id/progress">
        <rotate android:fromDegrees="145"
            android:toDegrees="145">

            <shape android:shape="ring"
                android:thicknessRatio="6">

                <gradient android:type="sweep"
                    android:startColor="@color/colorProgressPower2"
                    android:centerColor="@color/colorProgressPower2"
                    android:endColor="@color/colorProgressPower2" />

            </shape>
        </rotate>
    </item>

</layer-list>